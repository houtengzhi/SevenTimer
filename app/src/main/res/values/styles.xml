<resources>

    <!-- Base application theme. -->
    <style name="AppTheme" parent="Theme.MaterialComponents.Light.NoActionBar">
        <!-- Customize your theme here. -->
        <item name="colorPrimary">@color/mxColorPrimary</item>
        <item name="colorPrimaryDark">@color/mxColorPrimaryDark</item>
        <item name="colorAccent">@color/mxColorAccent</item>
    </style>

    <style name="ToolbarTheme" parent="AppTheme">
        <item name="android:background">@color/mxColorPrimary</item>
    </style>

    <style name="LeftDrawerArrowStyle" parent="AppTheme">
    </style>

    <style name="Subtitle1.Regular" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">sans-serif</item>
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="android:textColor">@color/mxGrey90</item>
        <item name="android:includeFontPadding">false</item>
    </style>

    <style name="Subtitle1.Medium" parent="TextAppearance.MaterialComponents.Subtitle1">
        <item name="fontFamily">sans-serif-medium</item>
        <item name="android:lineSpacingExtra">8dp</item>
        <item name="android:textColor">@color/mxGrey90</item>
        <item name="android:includeFontPadding">false</item>
    </style>

</resources>
